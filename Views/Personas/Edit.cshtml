@model CRUDEjemplo.Models.Persona

@{
    ViewBag.Title = "Editar";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-warning text-white">
            <h4 class="mb-0">Editar Persona</h4>
        </div>
        <div class="card-body">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)

                <div class="row mb-3">
                    <div class="col-md-6">
                        @Html.LabelFor(m => m.Nombre, new { @class = "form-label fw-bold" })
                        @Html.EditorFor(model => model.Nombre, "Nombre Completo", new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-6">
                        @Html.LabelFor(model => model.Edad, htmlAttributes: new { @class = "control-label fw-bold col-md-2" })
                        @Html.EditorFor(model => model.Edad, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Edad, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        @Html.LabelFor(m => m.Correo, new { @class = "form-label fw-bold" })
                        @Html.EditorFor(model => model.Correo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Correo, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6">
                        @Html.LabelFor(m => m.Telefono, "Teléfono", new { @class = "form-label fw-bold" })
                        @Html.EditorFor(model => model.Telefono, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-12">
                        @Html.LabelFor(m => m.Direccion, "Dirección", new { @class = "form-label fw-bold" })
                        @Html.EditorFor(model => model.Direccion, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Direccion, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        @Html.LabelFor(m => m.FechaNacimiento, "Fecha de Nacimiento", new { @class = "form-label fw-bold" })
                        @Html.TextBoxFor(model => model.FechaNacimiento, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                        @Html.ValidationMessageFor(model => model.FechaNacimiento, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-6">
                        @Html.LabelFor(m => m.Genero, "Género", new { @class = "form-label fw-bold" })
                        @Html.DropDownListFor(model => model.Genero,
                           new List<SelectListItem>
                           {
                               new SelectListItem { Text = "Masculino", Value = "M" },
                               new SelectListItem { Text = "Femenino", Value = "F" }
                           },
                           "Seleccione género",
                           new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Genero, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        @Html.LabelFor(m => m.Rut, new { @class = "form-label fw-bold" })
                        @Html.EditorFor(model => model.Rut, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Rut, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="d-flex justify-content-between">
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        Volver
                    </a>
                    <button type="submit" class="btn btn-primary">
                        Guardar
                    </button>
                </div>
                }

                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                }
        </div>
    </div>
</div>